{
  "name": "Home Assistant Development for MU/TH/UR 6000 Cards",
  "image": "ghcr.io/home-assistant/devcontainer:latest",
  "appPort": [
    "8123:8123"
  ],
  "postCreateCommand": "container install",
  "runArgs": [
    "-e",
    "GIT_EDITOR=code --wait",
    "--privileged"
  ],
  "mounts": [
    "source=${localWorkspaceFolder}/dist,target=/workspaces/core/config/www/mu-th-ur-6000-cards,type=bind,consistency=cached",
    "source=${localWorkspaceFolder}/fonts,target=/workspaces/core/config/www/mu-th-ur-6000-cards-fonts,type=bind,consistency=cached"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "ms-python.python",
        "redhat.vscode-yaml"
      ],
      "settings": {
        "python.linting.pylintEnabled": true,
        "python.linting.enabled": true,
        "python.formatting.provider": "black",
        "editor.formatOnPaste": false,
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "files.trimTrailingWhitespace": true
      }
    }
  }
}
